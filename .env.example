NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id
NEXT_PUBLIC_CHAIN_ID=97
NEXT_PUBLIC_BSC_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/
# NEXT_PUBLIC_BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/
NEXT_PUBLIC_IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs
NEXT_PUBLIC_MINER_ADDRESS=
NEXT_PUBLIC_DIVIDEND_ADDRESS=
NEXT_PUBLIC_TOKEN_ADDRESS=

# Next.js API Routes (server-side) envs for /api/chat and /api/agent/:tokenId
BSC_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/
CHAIN_ID=97
MINER_ADDRESS=
DIVIDEND_ADDRESS=
TOKEN_ADDRESS=

# OpenRouter (推荐)
# 复用同一个 key: OPENROUTER_API_KEY / OPEN_ROUTER_KEY 任一即可
OPENROUTER_API_KEY=
OPENROUTER_MODEL=openai/gpt-4o-mini
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_SITE_URL=http://localhost:3000
OPENROUTER_APP_NAME=flap-nfa-agent

# Optional rate limit for /api/chat
CHAT_RATE_LIMIT_MAX=80
CHAT_RATE_LIMIT_WINDOW_MS=86400000

# Cron: auto distribute dividends on Vercel
CRON_SECRET=
DISTRIBUTE_ENABLED=false
DISTRIBUTE_MIN_PENDING_WEI=10000000000000000
# can reuse DEPLOYER_PRIVATE_KEY; this key must be dividend contract owner
DISTRIBUTOR_PRIVATE_KEY=

# Cron: auto refill NFADividend by DEV wallet
# supports: 0x... / hex / privatekey:0x...
DEV_REFILL_PRIVATE_KEY=
DEV_REFILL_ENABLED=false
# keep at least this much BNB on dev wallet for future gas (default 0.02 BNB)
DEV_REFILL_KEEP_GAS_WEI=20000000000000000
# skip transfer if final amount is lower than this threshold (default 0.001 BNB)
DEV_REFILL_MIN_TRANSFER_WEI=1000000000000000
# claim pending dividend before refill (native BNB mode only)
DEV_REFILL_AUTO_CLAIM=true
DEV_REFILL_CLAIM_MIN_PENDING_WEI=1
